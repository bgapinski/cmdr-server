<div id="general-configure">
  <div class="controls">
    <div class="field name">
      <label>Name:</label>
      <input type="text" class="name-field" value="{{name}}">
    </div>

    <div class="field building">
      <label>Building:</label>
      <select class="building-field">
        {{#buildings}}
          <option value="{{id}}">{{name}}</option>
        {{/buildings}}
      </select>
    </div>

    <div class="diagram">
    </div>
  </div>
</div>
