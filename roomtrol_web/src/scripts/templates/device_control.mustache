<h1>{{name}}</h1>

<div class="vars">
  {{#vars}}
    <h2>{{titleize name}}</h2>
    <div class="control" id="var-{{name}}">
      {{#if _type.boolean}}
        <a href="javascript:" class="button off">off</a>
        <a href="javascript:" class="button on">on</a>
      {{/if}}
      {{#if _type.percentage}}
        <input type="range" min="0" max="1" step="0.01">
        <span class="range-value"></span>
      {{/if}}
      {{#if _type.option}}
        {{#options}}
          <a href="javascript:" class="button select"
          data-value="{{this}}">{{this}}</a>
        {{/options}}
      {{/if}}
    </div>
  {{/vars}}
</div>
